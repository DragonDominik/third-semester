<Window x:Class="PingPongGame.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PingPongGame"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.InputBindings>
        <KeyBinding Command="{Binding MovePadCommand}"
                    CommandParameter="Right" Key="Right" />
        <KeyBinding Command="{Binding MovePadCommand}"
                    CommandParameter="Left" Key="Left"/>

        <KeyBinding Command="{Binding StartGameCommand}" Key="Space" />
    </Window.InputBindings>

    <Grid Background="White"
          Width="{Binding GridSize.Width, Mode=OneTime}"
          Height="{Binding GridSize.Height, Mode=OneTime}">

        <Ellipse x:Name="Ball"
                 Fill="Blue"
                 Stroke="Black"
                 HorizontalAlignment="Left"
                 VerticalAlignment="Top"
                 Width="{Binding BallSize.Width, Mode=OneTime}"
                 Height="{Binding BallSize.Height, Mode=OneTime}"
                 Margin="{Binding BallStartPosition, Mode=OneWay}" />


        <Rectangle x:Name="Pad"
                   Fill="Black"
                   Stroke="Black"
                   HorizontalAlignment="Left"
                   VerticalAlignment="Top"
                   Width="{Binding PadSize.Width, Mode=OneTime}"
                   Height="{Binding PadSize.Height, Mode=OneTime}"
                   Margin="{Binding PadStartPosition, Mode=OneWay}" />
    </Grid>
</Window>